---
import BookingButton from './BookingButton.astro';
import { siteConfig } from '../config';
---

<section class="relative bg-gradient-to-br from-bg-primary via-bg-secondary to-bg-primary text-text-primary py-12 sm:py-16 md:py-20 lg:py-32">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <!-- StoryBrand 2.0 One-Liner -->
      <p class="text-base sm:text-lg md:text-xl mb-4 sm:mb-6 text-text-tertiary font-medium px-2">
        {siteConfig.oneLiner}
      </p>
      <!-- Headline (The Hook) -->
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-4 sm:mb-6 leading-tight px-2">
        Acoustic Architect & Custom Millwork Specialist
      </h1>
      <!-- Subheadline (The Promise) -->
      <p class="text-lg sm:text-xl md:text-2xl mb-6 sm:mb-8 md:mb-10 text-text-secondary leading-relaxed px-2">
        Designing Luxury Studios & Listening Rooms for Musicians
      </p>
      <div class="flex justify-center px-4">
        <BookingButton text="Get Started" />
      </div>
    </div>
  </div>
</section>

