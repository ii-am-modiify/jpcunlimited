---
interface Props {
  text?: string;
  variant?: 'primary' | 'secondary';
}

const { 
  text = "Get Started",
  variant = 'primary'
} = Astro.props;

const baseClasses = "inline-block px-6 sm:px-8 py-3 sm:py-4 text-base sm:text-lg font-semibold rounded-lg transition-all duration-200 hover:shadow-lg";
const variantClasses = variant === 'primary' 
  ? "bg-gold text-bg-primary hover:bg-gold-light" 
  : "bg-transparent border-2 border-gold text-gold hover:bg-gold hover:text-bg-primary";
---

<a href="/contact" class={`${baseClasses} ${variantClasses}`}>
  {text}
</a>

