---
import { siteConfig } from '../config';
---

<footer class="bg-bg-secondary border-t border-bg-tertiary py-12 sm:py-16">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 sm:gap-12">
      <!-- Brand Section -->
      <div>
        <h3 class="text-xl sm:text-2xl font-bold text-gold mb-4">
          {siteConfig.business.name}
        </h3>
        <p class="text-text-tertiary text-sm sm:text-base mb-4">
          {siteConfig.business.description}
        </p>
        <p class="text-text-tertiary text-sm sm:text-base">
          {siteConfig.business.location}
        </p>
      </div>
      
      <!-- Navigation Links -->
      <div>
        <h4 class="text-lg font-semibold text-text-primary mb-4">Navigation</h4>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-text-tertiary hover:text-gold transition-colors text-sm sm:text-base">Home</a>
          </li>
          <li>
            <a href="/#about" class="text-text-tertiary hover:text-gold transition-colors text-sm sm:text-base">About</a>
          </li>
          <li>
            <a href="/#services" class="text-text-tertiary hover:text-gold transition-colors text-sm sm:text-base">Services</a>
          </li>
          <li>
            <a href="/contact" class="text-text-tertiary hover:text-gold transition-colors text-sm sm:text-base">Contact</a>
          </li>
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h4 class="text-lg font-semibold text-text-primary mb-4">Contact</h4>
        {siteConfig.contact.email && (
          <p class="text-text-tertiary text-sm sm:text-base mb-2">
            <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-gold transition-colors">
              {siteConfig.contact.email}
            </a>
          </p>
        )}
        {siteConfig.contact.phone && (
          <p class="text-text-tertiary text-sm sm:text-base mb-2">
            <a href={`tel:${siteConfig.contact.phone}`} class="hover:text-gold transition-colors">
              {siteConfig.contact.phone}
            </a>
          </p>
        )}
        {siteConfig.social.linkedin && (
          <a 
            href={siteConfig.social.linkedin} 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-text-tertiary hover:text-gold transition-colors text-sm sm:text-base"
          >
            LinkedIn
          </a>
        )}
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="mt-8 sm:mt-12 pt-8 border-t border-bg-tertiary text-center">
      <p class="text-text-tertiary text-sm">
        Â© {new Date().getFullYear()} {siteConfig.business.name}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

