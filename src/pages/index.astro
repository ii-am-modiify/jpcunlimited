---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import PainPoints from '../components/PainPoints.astro';
import AboutSection from '../components/AboutSection.astro';
import ProcessSteps from '../components/ProcessSteps.astro';
import Services from '../components/Services.astro';
import FAQ from '../components/FAQ.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config';
---

<BaseLayout 
  title={siteConfig.title}
  description={siteConfig.description}
>
  <Header />
  
  <!-- StoryBrand 2.0 Flow -->
  
  <!-- 1. Hero (One-Liner + Headline + CTA) -->
  <Hero />
  
  <!-- 2. The Villain (Three levels of problem) -->
  <PainPoints />
  
  <!-- 3. The Guide (Empathy + Authority) -->
  <section id="about">
    <AboutSection />
  </section>
  
  <!-- 4. The Plan (3-step process) -->
  <ProcessSteps />
  
  <!-- 5. Services (Solutions) -->
  <Services />
  
  <!-- 6. FAQ (Objection handling) -->
  <FAQ />
  
  <!-- 7. Footer -->
  <Footer />
</BaseLayout>

